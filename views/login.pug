extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign In
                form(method='POST' action='/auth/login')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='name@email.com' name='email' required=true)
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password' required=true)
                    button.btn.btn-success(type='submit') Sign In