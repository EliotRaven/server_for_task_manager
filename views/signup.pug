extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up
                form(method='POST' action='/auth/registration')
                    div.form-group
                        label(for='name') Name:
                        input#name.form-control(type='text' name='first_name' required=true)
                    div.form-group
                        label(for='surname') Surname:
                        input#surname.form-control(type='text' name='second_name' required=true)
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email', placeholder='name@email.com' name='email' required=true)
                    div.form-group
                        label(for='pw') Password:
                        input#pw.form-control(type='password' name='password' required=true)
                    button.btn.btn-success(type='submit') Sign In